extends layout 
block content 
  h1 on tea time, let's chat
  .container 
   .flex
      .column-sidebar 
        .title 
          form.login-form(action="login", method="post") 
            h3 Login   
            a(href="/users/register") Create an account!  
            if error 
              .error #{error.message} 
            label(for="email") Username
            input#email(type="text", name="email", placeholder="your email address", required)  
            label(for="password") Password 
            input#password(type="password", name="password", required)   
            a(href="/users/forgot") Forgot your password?
            button(type="submit") Login
