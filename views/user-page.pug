doctype html
html 
  head
    link(rel="stylesheet", href="stylesheets/chat-box.css")
    script(src="https://unpkg.com/axios/dist/axios.min.js")
    script(src="https://cdn.socket.io/4.4.1/socket.io.min.js", integrity="sha384-fKnu0iswBIqkjxrhQCTZ7qlLHOFEgNkRmK2vaO/LbTZSXdJfAu6ewRBdwHPhBo/H", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
  body 
    nav.nav 
      ul 
        li: a(href="/") Home 
        li: include includes/logout.pug  
    section#user-details 
      p #{user.username} 
    main.container 
      .row.g-5
        .col-3.bg-light
          ul.nav.nav-tabs 
            li.nav-item 
              - var href='users/'+user.id+'/groups'
              a#list-groups.nav-link.active(href= href, aria-current="page")  Groups 
            li.nav-item 
              a.nav-link(href="users/:id/followed")  Followed
          div#left-sidebar.row
            if groups
              include includes/group.pug
            else if followed 
              include includes/followed.pug
        .col-6
          include includes/chat.pug
        .col-3.bg-light
          include includes/list-members.pug
    script(src="javascripts/socket-client.js")
    script(src="javascripts/groups.js")
    script(src="javascripts/show-message.js") 



