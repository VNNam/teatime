extends layout 
block content 
  .container 
    .flex 
      .column-sidebar 
        if error 
          .error #{error.message}
        if email
          h3 #{email} has updated password!
        else 
          .title 
            form(action="change-password", method="post") 
              h3 Change your password 
              label(for="newPassword") New Password 
              input#newPassword(type="password", name="newPassword")
              button(type="submit") Update